<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="200dp"
                android:layout_height="220dp"
                android:gravity="center"
                android:src="@drawable/sun"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/tw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Welcome Abhinav! "
                android:textSize="25dp"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#858585"
                android:gravity="center"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                android:layout_margin="20dp"
                android:id="@+id/cc5"
                app:cardCornerRadius="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/cctv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="  Meet with a coach 1:1"
                        android:textSize="19dp"
                        android:drawableStart="@drawable/friends"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/nunito_sans"
                        android:textStyle="bold" />
                    <View
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:background="#D9DAD8"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/cctv2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="  How was your day?"
                        android:textSize="19dp"
                        android:padding="10dp"
                        android:background="#acbdaa"
                        android:drawableStart="@drawable/bbok"
                        android:fontFamily="@font/nunito_sans"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvexplore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nunito_sans"
        android:text="Explore Group Coaching"
        android:textStyle="bold"
        android:textColor="#858585"
        android:textSize="19dp"
         />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvsess1"
                android:layout_width="160dp"
                android:layout_height="180dp"
                app:cardCornerRadius="40dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:gravity="center"
                        android:src="@drawable/women1"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Coming together.."
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="#858585"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito_sans"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="May 20 . 10:30pm"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="#858585"
                        android:textSize="12dp"
                        android:fontFamily="@font/nunito_sans"
                        />



                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvsess2"
                android:layout_width="160dp"
                android:layout_height="180dp"
                app:cardCornerRadius="40dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:gravity="center"
                        android:src="@drawable/women2"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Inviting Calm..."
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="#858585"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito_sans"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="May 22 . 10:30pm"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="#858585"
                        android:textSize="12dp"
                        android:fontFamily="@font/nunito_sans"
                        />




                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvsess3"
                android:layout_width="160dp"
                android:layout_height="180dp"
                app:cardCornerRadius="40dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:gravity="center"
                        android:src="@drawable/women3"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                      />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Creating your wellness..."
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="#858585"
                        android:textSize="17dp"
                        android:fontFamily="@font/nunito_sans"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="May 24 . 10:30pm"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="#858585"
                        android:textSize="12dp"
                        android:fontFamily="@font/nunito_sans"
                        />




                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvsess4"
                android:layout_width="160dp"
                android:layout_height="180dp"
                app:cardCornerRadius="40dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:gravity="center"
                        android:src="@drawable/women4"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                       />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Foods to eat..."
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="#858585"
                        android:textSize="17dp"
                        android:fontFamily="@font/nunito_sans"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="May 26 . 10:30pm"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="#858585"
                        android:textSize="12dp"
                        android:fontFamily="@font/nunito_sans"
                        />




                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>


            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Additional Resources"
                android:textColor="#858585"
                android:textSize="19dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:id="@+id/cj1"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="ANA Resources"
                android:background="#acbdaa"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:padding="10dp"
                android:drawableEnd="@drawable/anaresources"

                android:text="Access additional resources to  \nsupport your mental health and \n well-being"
                android:textSize="16dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</FrameLayout>