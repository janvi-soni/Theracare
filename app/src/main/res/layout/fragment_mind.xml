<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mind">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Featured Mindfulness Tracks"

                android:textSize="25dp"
                android:textColor="#858585"
                android:textStyle="bold" />
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:background="#222222"
                android:layout_height="0.70dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/m1"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        app:cardCornerRadius="40dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:layout_width="260dp"
                                android:layout_height="220dp"
                                android:layout_gravity="center"
                                android:src="@drawable/working"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Work-Life Balance"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:textColor="#858585"
                                android:textSize="19dp"
                                android:fontFamily="@font/nunito_sans"
                                />



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/m2"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        app:cardCornerRadius="40dp"
                        android:layout_margin="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:src="@drawable/daily_stress_img"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Daily-Stress"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:textColor="#858585"
                                android:textSize="19dp"
                                android:fontFamily="@font/nunito_sans"
                                />



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/m3"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        app:cardCornerRadius="40dp"
                        android:layout_margin="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:src="@drawable/daily_frustation"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Daily-frustation"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:textColor="#858585"
                                android:textSize="19dp"
                                android:fontFamily="@font/nunito_sans"
                                />



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/m4"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        app:cardCornerRadius="40dp"
                        android:layout_margin="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:src="@drawable/slow"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Slowing-down"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:textColor="#858585"
                                android:textSize="19dp"
                                android:fontFamily="@font/nunito_sans"
                                />



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="#D9DAD8"
                android:layout_height="0.50dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Categories"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#858585"
                android:textSize="25dp"
                android:fontFamily="@font/nunito_sans"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    app:cardElevation="10dp"
                    android:id="@+id/m5"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Slowing down"
                            android:fontFamily="@font/nunito_sans"
                            android:gravity="center"
                            android:textColor="#858585"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/m6"
                    app:cardCornerRadius="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Daily frustation"
                            android:gravity="center"
                            android:textColor="#858585"
                            android:textSize="16dp"
                            android:fontFamily="@font/nunito_sans"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    app:cardElevation="10dp"
                    android:id="@+id/m7"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Daily stress"
                            android:textColor="#858585"
                            android:textSize="16dp"

                            android:fontFamily="@font/nunito_sans"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/m8"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:textColor="#858585"

                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Work-Life Balance"
                            android:gravity="center"
                            android:fontFamily="@font/nunito_sans"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    app:cardElevation="10dp"
                    android:id="@+id/c5"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Breaking Routine"

                            android:fontFamily="@font/nunito_sans"
                            android:gravity="center"
                            android:textColor="#858585"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/c6"
                    app:cardCornerRadius="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >

                        <TextView
                            android:fontFamily="@font/nunito_sans"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Rediscovering Purpose"
                            android:gravity="center"
                            android:textColor="#858585"
                            android:textStyle="bold"
                            android:textSize="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    app:cardElevation="10dp"
                    android:id="@+id/c7"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Patient gratification"
                            android:fontFamily="@font/nunito_sans"
                            android:gravity="center"
                            android:textColor="#858585"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"
                    android:id="@+id/c8"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >

                        <TextView
                            android:fontFamily="@font/nunito_sans"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Coping with grief"
                            android:gravity="center"
                            android:textColor="#858585"
                            android:textStyle="bold"
                            android:textSize="16dp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>







</FrameLayout>