<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/set"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:layout_gravity="center"
        app:civ_border_width="2dp"
            android:src="@drawable/personimg"
        android:layout_marginTop="10dp" />
    <TextView
        android:fontFamily="@font/nunito_sans"
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#acbdaa"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=" Change profile picture"
      />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp"
        android:id="@+id/cc1"
        app:cardCornerRadius="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv2"
                android:textSize="18dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Name"
                android:textColor="#acbdaa"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stv2"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Abhinav Agarwal"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp"
        android:id="@+id/cc2"
        app:cardCornerRadius="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Username"
                android:textColor="#acbdaa"
                android:textSize="18dp"
                android:padding="5dp"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="abhinavagarwal20.aa"
                android:padding="5dp"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp"
        android:id="@+id/cc3"
        app:cardCornerRadius="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Profession"
                android:textSize="18dp"
                android:padding="5dp"
                android:textColor="#acbdaa"

                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold" />

            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Administrative"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        android:id="@+id/cc4"
        app:cardCornerRadius="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Department"
                android:padding="5dp"
                android:textColor="#acbdaa"
                android:textSize="18dp"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold" />

            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Internal Medicine"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:layout_marginLeft="10dp"

        android:textSize="16dp"
        android:fontFamily="@font/nunito_sans"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        android:id="@+id/cc5"
        app:cardCornerRadius="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Announcments and Surveys"
                android:textSize="18dp"
                android:padding="10dp"
                android:textColor="#858585"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold" />
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="#D9DAD8"

                android:layout_height="0.50dp"/>

            <TextView
                android:textColor="#858585"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Coaching Reminders"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Legal"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:fontFamily="@font/nunito_sans"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        android:id="@+id/cc6"
        app:cardCornerRadius="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Terms of Use"
                android:textSize="18dp"
                android:textColor="#acbdaa"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold" />
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="#D9DAD8"
                android:layout_height="0.50dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Privacy Policy"
                android:textSize="18dp"
                android:padding="10dp"
                android:textColor="#acbdaa"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/cc7"
        app:cardCornerRadius="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textColor="#acbdaa"
                android:textSize="19dp"
                android:gravity="center"
                android:padding="10dp"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>


</ScrollView>