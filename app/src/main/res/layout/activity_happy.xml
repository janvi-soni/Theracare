<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".happy">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center"
                android:textColor="#acbdaa"
                android:text="Why do you feel this way?"
                android:textSize="25dp" />
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:background="#222222"
                android:layout_height="0.70dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    android:elevation="2dp"
                    android:id="@+id/hc1"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/friends"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Friends"

                            android:fontFamily="@font/nunito_sans"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    android:elevation="2dp"
                    android:layout_margin="10dp"
                    android:id="@+id/hc2"
                    app:cardCornerRadius="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/family"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Family"
                            android:fontFamily="@font/nunito_sans"
                            android:gravity="center"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    android:elevation="2dp"
                    android:id="@+id/hc3"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/working"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:fontFamily="@font/nunito_sans"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Work"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    android:elevation="2dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/hc4"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/finance"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:fontFamily="@font/nunito_sans"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Finances"
                            android:gravity="center"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    android:elevation="2dp"
                    android:id="@+id/hc5"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/sleep" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Sleep"
                            android:fontFamily="@font/nunito_sans"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    android:elevation="2dp"
                    android:layout_margin="10dp"
                    android:id="@+id/hc6"
                    app:cardCornerRadius="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_baseline_health_and_safety_24"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:fontFamily="@font/nunito_sans"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Health"
                            android:gravity="center"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    android:elevation="2dp"
                    android:id="@+id/hc7"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/relationships"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Relationships"
                            android:fontFamily="@font/nunito_sans"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    android:elevation="2dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"
                    android:id="@+id/hc8"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/entertainment"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:fontFamily="@font/nunito_sans"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Entertainment"
                            android:gravity="center"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    android:elevation="2dp"
                    android:id="@+id/hc9"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/weather"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:fontFamily="@font/nunito_sans"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Weather"

                            android:gravity="center"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="17dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/ed"
                        android:text="Continue" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</ScrollView>